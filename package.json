    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-storybook": "^0.8.0",
    "token-transformer": "^0.0.33",
    "typescript": "^5.2.2",
    "vite": "^5.3.3",
    "vite-plugin-dts": "^3.9.1"
