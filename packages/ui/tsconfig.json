{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "noImplicitAny": true,
    "declaration": true,
    "noEmit": false,
    "strict": true,

    "moduleResolution": "Bundler",
    "declarationMap": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@styled-system/*": ["styled-system/*"]
    }
  },
  "include": ["src/**/*", "postcss.config.cjs"],
  "exclude": ["node_modules", "dist"]
}
