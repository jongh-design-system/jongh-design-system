{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "noImplicitAny": true,
    "declaration": true,
    "noEmit": false,
    "declarationMap": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@styled-system/*": ["styled-system/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
